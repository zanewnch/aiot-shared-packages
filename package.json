{
  "name": "aiot-shared-packages",
  "version": "1.1.1",
  "description": "AIOT shared packages and utilities for microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib dist *.js *.d.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsc --watch"
  },
  "keywords": [
    "aiot",
    "microservices",
    "shared",
    "middleware",
    "auth",
    "database"
  ],
  "author": "AIOT Team",
  "license": "MIT",
  "files": [
    "*.js",
    "*.d.ts",
    "configs/**/*",
    "services/**/*",
    "patterns/**/*",
    "utils/**/*",
    "database/*.js",
    "database/*.d.ts",
    "types/*.js",
    "types/*.d.ts",
    "lib/**/*"
  ],
  "dependencies": {
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "pg": "^8.8.0",
    "mongoose": "^7.0.0",
    "redis": "^4.6.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0",
    "socket.io": "^4.7.0",
    "express": "^4.18.0",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "http-errors": "^2.0.0",
    "inversify": "^6.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cookie-parser": "^1.4.0",
    "@types/morgan": "^1.9.0",
    "@types/passport": "^1.0.0",
    "@types/http-errors": "^2.0.0"
  }
}